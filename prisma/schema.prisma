generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Category {
  id            Int       @id @unique @default(autoincrement()) @db.UnsignedInt
  category_name String    @db.VarChar(100)
  image         String?   @db.VarChar(255)
  product       Product[]

  @@map("category")
}

enum Active {
  Y
  N
}

model Product {
  id          Int       @id @unique @default(autoincrement())
  name        String    @db.VarChar(255)
  description String?   @db.Text
  discount    Int       @default(0)
  price       Int?
  stock       Int?      @db.SmallInt
  category_id Int       @db.UnsignedInt
  image       String?   @db.MediumText
  category    Category? @relation(fields: [category_id], references: [id])
  active      Active    @default(N)

  @@index([category_id], name: "category_FK")
  @@map("product")
}


model Setting {
  id           Int      @id @default(autoincrement()) @db.UnsignedInt
  no_wa        String   @db.VarChar(20)
  is_maintenance Active @default(N)
  show_price   Active   @default(Y)
  logo         String?   @db.VarChar(255)
  logo_title   String?   @db.VarChar(100)
  @@map("setting")  
}

model Article {
  id         Int        @id @default(autoincrement()) @db.UnsignedInt
  title      String     @unique
  slug       String
  thumbnail  String? 
  content    String     @db.LongText
  created_at DateTime   @default(now())
  updated_at DateTime   @default(now())
  viewers    ViewerArticle? @relation(fields: [viewers_id], references: [id])
  viewers_id Int?       @db.UnsignedInt @unique
  writer     String?

  @@index([viewers_id], name: "viewers_FK")
  @@map("article")
}

model ViewerArticle {
  id       Int          @id @default(autoincrement()) @db.UnsignedInt
  total    Int          @default(0)
  article  Article?
  @@map("viewers_article")
}
model PackageBundle {
  id           Int       @id @default(autoincrement()) @db.UnsignedInt
  package_name String
  description  String
  price        Int

  @@map("package_bundle")
}


enum Role {
  SUPER_ADMIN
  ADMIN
  STAFF
}
model User {
  username      String @unique 
  password      String @db.VarChar(255)
  name          String @db.VarChar(100)
  role          Role @default(ADMIN)       
  @@map("user")
}

model FileManager {
  id           Int    @id @default(autoincrement()) @db.UnsignedInt
  type         TYPE_MANAGER 
  name         String @db.VarChar(255)
  path         String @db.VarChar(255)
  level        Int @default(0)
  @@map("file_manager")
}

enum TYPE_MANAGER {
  FILE
  FOLDER
}

model sections {
  id           Int    @id @default(autoincrement()) @db.UnsignedInt
  section_name String @db.VarChar(100)
  content      String @db.LongText()
  position     Int    @db.TinyInt()
  active       Active @default(Y)
}

model Popup {
  id           Int    @id @default(autoincrement()) @db.UnsignedInt
  title        String @db.VarChar(255)
  image        String @db.VarChar(255)
  start_at     DateTime @db.Date
  end_at       DateTime @db.Date
  active       Active @default(Y)
  @@map("popup")
}